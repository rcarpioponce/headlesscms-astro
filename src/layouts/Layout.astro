---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SEO from '../components/SEO.astro';
import { generateWebsiteSchema } from '../lib/schema';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  noindex?: boolean;
  keywords?: string;
}

const { 
  title, 
  description,
  image,
  type = "website",
  noindex,
  keywords
} = Astro.props;
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <SEO 
      title={title}
      description={description}
      image={image}
      type={type}
      noindex={noindex}
      keywords={keywords}
    />
    
    <slot name="head" />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
