---
// Header component
---

<header class="header">
  <div class="header-content">
    <a href="/" class="header-title">
      <h1>Aprende cada día más</h1>
    </a>
  </div>
</header>

<style>
.header {
  background: linear-gradient(135deg, var(--accent-primary) 0%, var(--accent-secondary) 100%);
  color: var(--text-primary);
  padding: 2rem 20px;
  margin-bottom: 2rem;
  text-align: center;
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid var(--border-color);
  box-shadow: 0 2px 10px var(--shadow-color);
}

.header-content {
  max-width: 900px;
  margin: 0 auto;
}

.header-title {
  text-decoration: none;
  color: inherit;
  transition: opacity 0.2s ease;
}

.header-title:hover {
  opacity: 0.9;
}

.header h1 {
  margin: 0;
  font-size: 2.5rem;
  font-weight: 700;
  letter-spacing: -0.5px;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  line-height: 1.2;
  color: white;
}

/* Mobile styles */
@media (max-width: 768px) {
  .header {
    padding: 1.5rem 20px;
    margin-bottom: 1rem;
  }
  
  .header h1 {
    font-size: 1.8rem;
  }
}

/* Tablet styles */
@media (min-width: 769px) and (max-width: 1024px) {
  .header h1 {
    font-size: 2.2rem;
  }
}
</style>
